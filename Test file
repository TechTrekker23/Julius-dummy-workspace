# sales_chart.py
import matplotlib.pyplot as plt

sales = [1200, 1500, 1100, 1800, 2000]
months = ["Jan", "Feb", "Mar", "Apr", "May"]

plt.plot(months, sales, marker="o")
plt.title("Monthly Sales")
plt.xlabel("Month")
plt.ylabel("Revenue ($)")
plt.savefig("sales_chart.png")
print("Sales chart generated.")
